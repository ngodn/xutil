<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XLinXUtilities" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF358BD8</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.XLinXUtilities.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.XLinXUtilities.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.XLinXUtilities.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.XLinXUtilities.Fullscreen" parent="Theme.XLinXUtilities">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.XLinXUtilities.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.XLinXUtilities.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/xlinx_toolbar_background_light</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>
</resources>